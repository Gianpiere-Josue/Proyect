<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
   xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
   version="4.0">
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    
    <!-- Elimina esta sección si no usas JAX-RS -->
   
    <servlet>
        <servlet-name>JerseyServlet</servlet-name>
        <servlet-class>org.glassfish.jersey.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>jersey.config.server.provider.packages</param-name>
            <param-value>com.utp.proceso1.resources</param-value>
        </init-param>
        <load-on-startup>1</load-on-startup>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>JerseyServlet</servlet-name>
        <url-pattern>/api/*</url-pattern>
    </servlet-mapping>
  

    <!-- Configuración de la base de datos -->
    <resource-ref>
        <description>MySQL Datasource</description>
        <res-ref-name>jdbc/db_hotelcusco</res-ref-name>
        <res-type>javax.sql.DataSource</res-type>
        <res-auth>Container</res-auth>
    </resource-ref>

    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <!-- Servlets principales -->
    <servlet>
        <servlet-name>ReservaServlet</servlet-name>
        <servlet-class>com.utp.proceso1.controlador.ReservaServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServerlet</servlet-name>
        <servlet-class>com.utp.proceso1.controlador.LoginServerlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReservaServlet</servlet-name>
        <url-pattern>/ReservaServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ContactoServlet</servlet-name>
        <servlet-class>com.utp.proceso1.controlador.ContactoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ContactoServlet</servlet-name>
        <url-pattern>/ContactoServlet</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>MensajesDataServlet</servlet-name>
        <servlet-class>com.utp.proceso1.controlador.MensajesDataServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MensajesDataServlet</servlet-name>
        <url-pattern>/MensajesDataServlet</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>ReservasDataServlet</servlet-name>
        <servlet-class>com.utp.proceso1.controlador.ReservasDataServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ReservasDataServlet</servlet-name>
        <url-pattern>/ReservasDataServlet</url-pattern>
    </servlet-mapping>
    
   
    
</web-app>